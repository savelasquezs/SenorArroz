# Dockerfile para desarrollo con hot reload
FROM mcr.microsoft.com/dotnet/sdk:9.0

WORKDIR /src

# Install wget for health checks
RUN apt-get update && \
    apt-get install -y --no-install-recommends wget && \
    rm -rf /var/lib/apt/lists/*

# Expose ports
EXPOSE 8080
EXPOSE 8081

# Set environment variables for development
ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Development

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/swagger/index.html || exit 1

# El código fuente se montará como volumen desde docker-compose
# Script de inicio que restaura dependencias (excluyendo tests) y luego ejecuta dotnet watch
# Forzar el uso de ASPNETCORE_URLS en lugar de launchSettings.json
CMD ["sh", "-c", "dotnet restore SenorArroz.API/SenorArroz.API.csproj && cd SenorArroz.API && dotnet watch run --urls http://+:8080"]

